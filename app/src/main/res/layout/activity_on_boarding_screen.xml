<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/on_boarding_screen_background"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.OnBoardingScreen">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/fullSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="@color/on_boarding_active_color"
        app:sliderIndicatorUnselectedColor="@color/on_boarding_inactive_color"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true" />




</RelativeLayout>